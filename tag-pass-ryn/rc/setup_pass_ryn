#!/usr/bin/env sh

# debug log
printf "reading: %s\t\t($0)\n" "setup_pass_ryn" >> ~/.dotfiles_log
# includes
. "$HOME/.dotfiles/.lib/error"
. "$HOME/.dotfiles/.lib/yes_or_no"

if [ ! -d ~/.password-store/rynkowski ]; then
  echo "~/.password-store/rynkowski is not installed"
  yes_or_no "Do you want to clone this repo?" || return
  mkdir -p ~/.password-store
  git clone git@github.com:rynkowsg/rynkowski-pass-store.git ~/.password-store/rynkowski
fi
